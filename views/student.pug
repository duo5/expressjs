extends ../layout/common.pug
block content

    form.form-inline.mx-auto.mt-md-5(action="/student/search", method="get")
        div.form-group.mx-sm-3.mb-2
            label.sr-only(for='inputPassword2') Search
            input#inputPassword2.form-control(type='text', placeholder='key word',name="name",value=key?key:"")
        button.btn.btn-primary.mb-2(type='submit') Search
    table.table.mt-5.mb-5.table-striped
        thead.thead-dark
            tr
                th(scope='col') Avartar
                th(scope='col') Name
                th(scope='col') Phone
                th(scope='col') Tool
        tbody
            each s in students
                tr
                    th(scope='row')
                        img(src=s.avatar, alt="image",width="200px",height="50px")
                    td= s.name
                    td= s.phone
                    td
                        a.btn.btn-primary(href="/student/detail/"+s.id) Detail
                        a.btn.btn-success(href="/student/update/"+s.id) Update
                        a.btn.btn-danger(href="/student/remove/"+s.id) Remove
    img(src="/image/soda1.jpg")
    img(src="/image/soda2.jpg")
    img(src="/image/soda3.jpg")